<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/background_material_dark"

        android:id="@+id/sender_name_invite_tv"
        android:layout_below="@+id/room_name_invite_tv"
        android:layout_alignStart="@+id/room_name_invite_tv" />

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/cancel"
        android:id="@+id/decline_invite_btn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="270dp" />

    <Button

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/accept_invite_btn"
        android:background="@drawable/accept_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/background_material_dark"
        android:textStyle="bold"
        android:id="@+id/room_name_invite_tv"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@+id/accept_invite_btn"
        android:layout_alignParentStart="true" />
</RelativeLayout>