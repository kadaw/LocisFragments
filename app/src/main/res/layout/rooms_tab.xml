<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.tabslocis.UserActivity">

    <Button
        android:text="Create Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_material_light"
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Введите название"
        android:id="@+id/editText"
        android:textColorHint="@color/primary_dark_material_light"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="или создай свою комнату"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/primary_dark_material_light"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/tv_border"
        android:id="@+id/textView2"
        android:layout_marginLeft="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="kadaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_marginRight="17dp"
        android:layout_alignBottom="@+id/textView2"
        android:textColor="@color/primary_dark_material_light"
        android:layout_toEndOf="@+id/textView" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/lv_rooms"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        style="@style/Widget.AppCompat.ListView.Menu"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="true" />

</RelativeLayout>
