<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_name_tv"
        android:layout_alignStart="@+id/author_name_tv"
        android:id="@+id/song_name_tv"
        android:textColor="@color/background_material_dark"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_name_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:id="@+id/durability_tv"
        android:textColor="@color/background_material_dark"
        />

    <TextView
        android:text=""
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/tv_border"
        android:id="@+id/song_picture"
        android:layout_alignBottom="@+id/song_name_tv"
        android:layout_toStartOf="@+id/song_name_tv"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="author_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:textStyle="bold"
        android:id="@+id/author_name_tv"
        android:textColor="@color/background_material_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>